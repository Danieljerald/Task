@model SignUpModel
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

</head>
<body>
      <form method="post">
        <section class="vh-100" >
          <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                  <div class="card-body p-5 text-center">

                    <h3 class="mb-5">Reset Password</h3>

                    <div class="form-outline mb-4">
                      <input type="text"  asp-for="name" class="form-control form-control-lg" required/>
                      <label class="form-label" asp-for="name">Name</label>
                    </div>
                    
                    <div class="form-outline mb-4">
                      <input type="email"  asp-for="email" class="form-control form-control-lg" required/>
                      <label class="form-label" asp-for="email">email</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password"  asp-for="password" class="form-control form-control-lg" required/>
                      <label class="form-label" asp-for="password">Password</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password"  asp-for="cpassword" class="form-control form-control-lg" required/>
                      <label class="form-label" asp-for="cpassword">Conform Password</label>
                    </div>

                    <p style="color: red;">@ViewBag.message</p>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Change Pasword</button><br><br>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        </form>
</body>
</html>